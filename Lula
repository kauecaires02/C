# C

#include <stdio.h>
#include <string.h>

int main (void){

  float salario, desconto, bruto, porc;
  printf("Digite o salario = ");
  scanf("%f",&salario);
  printf("Porcentagem = ");
  scanf("%f",&porc);
  
  desconto = salario - (porc / 100);
  bruto = salario - desconto;
  printf("desconto = R$ %.2f \n",desconto);
  printf("Novo Salario = R$ %.2f \n",bruto);
  system("pause");
}
